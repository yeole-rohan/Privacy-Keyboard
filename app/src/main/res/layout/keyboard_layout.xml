<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:fontFamily="@font/roboto"
    android:background="@color/backgroundWhiteThemeColor"
    android:padding="4dp">

    <!-- ================================================================
         TOP BAR: emoji toggle (left, fixed) + suggestion strip (right, fills)
         Always present. Suggestions appear/disappear individually.
         ================================================================ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnEmoji"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="@string/smiley"
            android:textSize="20sp"
            android:background="@drawable/ripple_effect"
            android:padding="0dp" />

        <!-- Divider between emoji button and suggestion strip -->
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#22000000" />

        <!-- Suggestion strip — fills remaining width, equal-weight columns -->
        <LinearLayout
            android:id="@+id/autocompleteArea"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/suggestion1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#5F6368"
                android:background="@drawable/ripple_effect"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:visibility="gone" />

            <View
                android:id="@+id/suggDivider12"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#22000000"
                android:visibility="gone" />

            <TextView
                android:id="@+id/suggestion2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#5F6368"
                android:background="@drawable/ripple_effect"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:visibility="gone" />

            <View
                android:id="@+id/suggDivider23"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#22000000"
                android:visibility="gone" />

            <TextView
                android:id="@+id/suggestion3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#5F6368"
                android:background="@drawable/ripple_effect"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Divider before settings button -->
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#22000000" />

        <!-- Settings gear — hidden when suggestions or clipboard are showing -->
        <Button
            android:id="@+id/btnKeyboardSettings"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="⚙"
            android:textSize="18sp"
            android:background="@drawable/ripple_effect"
            android:padding="0dp" />

    </LinearLayout>

    <!-- Bottom border under top bar -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#22000000" />

    <!-- ================================================================
         CLIPBOARD STRIP: vertical scroll, fixed height.
         Shown only when input field is empty and clipboard has content.
         ================================================================ -->
    <ScrollView
        android:id="@+id/clipboardScroll"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:scrollbars="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/clipboardContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </ScrollView>

    <!-- ================================================================
         KEYBOARD ROWS (emoji view is added here programmatically)
         ================================================================ -->
    <LinearLayout
        android:id="@+id/normalContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/keyboardRowsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/rowNumeric"
                layout="@layout/row_numeric"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp" />

            <include
                android:id="@+id/rowAlphabetic1"
                layout="@layout/row_alphabetic_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp" />

            <include
                android:id="@+id/rowAlphabetic2"
                layout="@layout/row_alphabetic_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp" />

            <include
                android:id="@+id/rowAlphabetic3"
                layout="@layout/row_alphabetic_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <!-- Always visible — shown in both text and emoji modes -->
        <include
            android:id="@+id/functionalKeys"
            layout="@layout/functional_keys"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</LinearLayout>
