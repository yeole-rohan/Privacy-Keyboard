<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F4FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- ===== HEADER ===== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="20dp"
            android:paddingBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âŒ¨"
                android:textSize="48sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Privacy Keyboard"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#1A237E"
                android:fontFamily="@font/roboto"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your privacy. Your keyboard."
                android:textSize="13sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- ===== STATUS CARD ===== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_border"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Checking statusâ€¦"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto" />

            <TextView
                android:id="@+id/tvStatusSub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tap 'Enable' to add it to your input methods, then 'Select' to make it active."
                android:textSize="12sp"
                android:textColor="#777777"
                android:layout_marginTop="6dp" />

        </LinearLayout>

        <!-- ===== ENABLE / SELECT BUTTONS ===== -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEnableKeyboard"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Enable Privacy Keyboard"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto"
            app:cornerRadius="14dp"
            android:backgroundTint="#4A90D9"
            android:layout_marginBottom="10dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSelectKeyboard"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Select as Active Keyboard"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="#4A90D9"
            android:fontFamily="@font/roboto"
            app:cornerRadius="14dp"
            app:strokeColor="#4A90D9"
            app:strokeWidth="1.5dp"
            android:backgroundTint="@android:color/transparent"
            android:layout_marginBottom="24dp" />

        <!-- ===== NAV SECTION LABEL ===== -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OPTIONS"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="#9999AA"
            android:letterSpacing="0.1"
            android:layout_marginBottom="8dp" />

        <!-- ===== NAVIGATION CARDS ===== -->

        <!-- Settings -->
        <LinearLayout
            android:id="@+id/cardSettings"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/rounded_border"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="âš™  Settings"
                android:textSize="15sp"
                android:textColor="#222222" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€º"
                android:textSize="20sp"
                android:textColor="#AAAAAA" />

        </LinearLayout>

        <!-- About -->
        <LinearLayout
            android:id="@+id/cardAbout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/rounded_border"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="â„¹  About"
                android:textSize="15sp"
                android:textColor="#222222" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€º"
                android:textSize="20sp"
                android:textColor="#AAAAAA" />

        </LinearLayout>

        <!-- Privacy Policy -->
        <LinearLayout
            android:id="@+id/cardPrivacy"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/rounded_border"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ”’  Privacy Policy"
                android:textSize="15sp"
                android:textColor="#222222" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€º"
                android:textSize="20sp"
                android:textColor="#AAAAAA" />

        </LinearLayout>

        <!-- Terms of Service -->
        <LinearLayout
            android:id="@+id/cardTerms"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/rounded_border"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ“‹  Terms of Service"
                android:textSize="15sp"
                android:textColor="#222222" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€º"
                android:textSize="20sp"
                android:textColor="#AAAAAA" />

        </LinearLayout>

        <!-- Legal -->
        <LinearLayout
            android:id="@+id/cardLegal"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/rounded_border"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="24dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="âš–  Legal"
                android:textSize="15sp"
                android:textColor="#222222" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€º"
                android:textSize="20sp"
                android:textColor="#AAAAAA" />

        </LinearLayout>

        <!-- Footer -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Made with â¤ by Rohan Yeole\nrohanyeole.com"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#AAAAAA"
            android:layout_marginBottom="8dp" />

    </LinearLayout>
</ScrollView>
