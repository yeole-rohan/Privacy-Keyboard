<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="10"
    android:gravity="center">

    <!-- Caps Lock Btn with weight 1.5 -->
    <include
        android:id="@+id/capsLock"
        layout="@layout/caps_lock"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5" />

    <!-- Buttons with equal weight -->
    <Button
        android:id="@+id/btnZ"
        style="@style/btnLightTheme"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Z" />

    <Button
        android:id="@+id/btnX"
        style="@style/btnLightTheme"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="X" />

    <Button
        android:id="@+id/btnC"
        style="@style/btnLightTheme"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="C" />

    <Button
        android:id="@+id/btnV"
        style="@style/btnLightTheme"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="V" />

    <Button
        android:id="@+id/btnB"
        style="@style/btnLightTheme"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="B" />

    <Button
        android:id="@+id/btnN"
        style="@style/btnLightTheme"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="N" />

    <Button
        android:id="@+id/btnM"
        style="@style/btnLightTheme"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="M" />

    <!-- BackSpace Btn with weight 1.5 -->
    <include
        android:id="@+id/backSpace"
        layout="@layout/back_space"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5" />

</LinearLayout>
